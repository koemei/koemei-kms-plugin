switch ($this->uploadType)
{
    case 'presentation':
        $content = ''; //$this->partial('partials/upload/kvpBox.phtml');
        break;
    case 'webcam':
        $content = $this->partial('partials/upload/webcamBox.phtml');
        $this->JsonContent(
                array(
                    'target' => '#uploadContainer',
                    'content' => $content,
                    'action' => 'replace'
                )
        );
    break;
    case 'media':
    default:
        $content = $this->partial('partials/upload/mediaBox.phtml');
        $this->JsonContent(
                array(
                    'target' => '#uploadContainer',
                    'content' => $content,
                    'action' => 'append'
                )
        );
    break;
}
