<ul id="player_tab_buttons">
    <li><a data-tab="#details_tab"><?php echo $this->translate('Details');?></a></li>
    <?php echo $this->ViewHook(Kms_Resource_Viewhook::CORE_VIEW_HOOK_PLAYERTABLINKS); ?>
