<strong><?php echo $this->translate('Show me');?>:</strong> &nbsp;
<select id="sidetabsselect">
        <?php echo $this->ViewHook(Kms_Resource_Viewhook::CORE_VIEW_HOOK_PLAYERSIDETABLINKS); ?>
</select>
<?php echo $this->ViewHook(Kms_Resource_Viewhook::CORE_VIEW_HOOK_PLAYERSIDETABS); ?>

<script>
    $('#playersidebar > ul').hide();
    if($('option','#sidetabsselect').length > 0) {
        $('#playersidebar > ul').hide();

        $('#playersidebar > ul:first').show();

        $('#playersidebar select#sidetabsselect').change(function() {
            var currentTab = $(this).val();
            $('#playersidebar > ul').hide();
            $('#playersidebar '+currentTab).show();
            var onShow = $(currentTab).attr('onshow');
            if(onShow) {
                eval(onShow);
            }
            return false;
        });
    }
</script>